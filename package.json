  "private": true,
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.1",
    "eslint": "^10.0.2",
    "globals": "^17.3.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "pdfjs-dist": "^5.4.624",
    "sharp": "^0.34.5"

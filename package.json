{
  "name": "ibooks-notes-sync-cli",
  "version": "0.1.0",
  "description": "CLI for syncing iBooks notes",
  "main": "dist/cli.js",
  "bin": {
    "ibooks-notes-sync": "dist/cli.js"
  },
  "files": [
    "dist",
    "tools"
  ],
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup",
    "start": "node dist/cli.js",
    "test": "tsx --test tests/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "check": "npm run lint && npm run typecheck && npm run test && npm run build"
  },
  "keywords": [],
